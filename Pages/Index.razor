@page "/"
@using umaStatus.Components

<div>
<h1>Hello, world!</h1>

@foreach (var (index, status) in @umas.Select((status, i) => (i + 1, status)))
{
  <umaStatus.Components.Character 
    Status=@status
    Count=@umas.Count()
    No=@index
  />
}

<table class="frame" height="200px" width="560px">
    <tr>
      <td rowspan="2">
        <!--枠番-->
        <input type="number" @bind="no" />
      </td>
      <td rowspan="2">
        <!--イメージ-->
      </td>
      <td>
        <!--距離適正-->
        <!--芝適正-->
        <!--やる気-->
      </td>
    </tr>
    <tr>
      <td>
        <table>
          <tr>
            <th scope="col">スピード</th>
            <th scope="col">スタミナ</th>
            <th scope="col">パワー</th>
            <th scope="col">根性</th>
            <th scope="col">賢さ</th>
          </tr>
          <tr>
            <td><input type="number" @bind="speed" /></td>
            <td><input type="number" @bind="stamina" /></td>
            <td><input type="number" @bind="power" /></td>
            <td><input type="number" @bind="guts" /></td>
            <td><input type="number" @bind="intelligence" /></td>
          </tr>
        </table>
      </td>
    </tr>
</table>
<button @onclick="UpdateState">追加</button>
</div>

